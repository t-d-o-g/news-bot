<h1>Articles</h1>
<hr>
<ul>
  {{#each articles}}
    <div class="article" id={{_id}}>
      <h3>{{title}}</h3>
      <div id="summary">
        {{summary}}
      </div>
      </br>
      <a href={{link}} target='_blank'>Link to Article</a>
      </br>
      </br>
      {{#if comments}}
        <u><h4>Comments:</h4></u>
          <div class="comment-list">
            <ul>
              {{#each comments}}
                <li class="comment" id={{_id}}>
                  <a href="#"><i class="fa fa-times-circle-o" aria-hidden="true"></i></a>
                  {{body}}
                </li>
              {{/each}}
            <ul>
          </div>
        {{/if}}
      {{> comments/comment-form}}
      </br>
      </br>
    </div>
  {{/each}}
</ul>
